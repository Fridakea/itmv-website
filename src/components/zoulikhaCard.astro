---
const { description, name } = Astro.props;

---

<article class="woman-component">
  <img class="visible" src="/img/Zoulikha.webp" alt="Woman Image">
  <p class="hidden"><span class="cap">{ name }</span> { description }</p>
</article>

<style>
.woman-component {
  position: relative;
  width: 250px;
  height: 400px;
  border: 1px dashed var(--secondary-color);
  border-spacing: 0px;
  transition: transform 0.4s ease;
}

.woman-component:hover {
  transform: scale(1.05);
}

.woman-component img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: opacity 0.5s ease;
}

.woman-component p {
  background-color: #F1ECEC;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 10px;
  opacity: 0;
  transition: opacity 0.5s ease; 
}

.woman-component p.visible {
  opacity: 1;
}

.cap {
  font-size: 1.5em;
}

@media (min-width: 768px) { 

  .woman-component {
    width: 250px;
    height: 450px;
   
  }
  
  .woman-component:hover img {
    opacity: 0;
  }

  .woman-component:hover p {
    opacity: 1; 
  }
}
</style>

<script>
    function toggleVisibility(article) {
      console.log('Clicked!');
      const img = article.querySelector('img');
      const paragraph = article.querySelector('p');
    
      img.classList.toggle('hidden');
      img.classList.toggle('visible');
    
      paragraph.classList.toggle('hidden');
      paragraph.classList.toggle('visible');
    }
    
    document.addEventListener('DOMContentLoaded', function() {
      const womanComponents = document.querySelectorAll('.woman-component');
      womanComponents.forEach(function(womanComponent) {
        womanComponent.addEventListener('click', function() {
          toggleVisibility(this);
        });
      });
    });
    </script>